<div id="container">

    <img src="/public/assets/img/burger.jpg" alt="Burger">

    <h1>Eat-Da-Burger!</h1>

    <div id="not-devoured-box">
    <ul id="not-devoured" style="width:50%">
        {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
            {{/unless}}
        {{/each}}
    </ul>
    </div>

    <div id="devoured-box">
    <ul id="devoured" style="float:left;width:50%">
        {{#each burgers}}
            {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
            {{/if}}
        {{/each}}
    </ul>
    </div>

    <div id="newBurger">
    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="newBurger">Burger Name:</label>
            <input type="text" id="newBurger" name="burger_name">
        </div>

        <button type="submit">Add Burger</button>
    </form>
    </div>

</div>